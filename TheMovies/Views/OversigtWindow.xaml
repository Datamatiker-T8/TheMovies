<Page x:Class="TheMovies.Views.OversigtWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheMovies.Views"
      mc:Ignorable="d" 
      d:DesignHeight="634" d:DesignWidth="1150"
      Title="OversigtWindow">

    <Grid Background="#ffffff">
        <Button x:Name="AddMovie" Content="Opret film" HorizontalAlignment="Left" Margin="288,490,0,0" VerticalAlignment="Top" Height="75" Width="158" Style="{DynamicResource ButtonTheme2}" Click="AddMovie_Click"/>
        <Button x:Name="RemoveMovie" Content="Fjern film" HorizontalAlignment="Left" Margin="710,490,0,0" VerticalAlignment="Top" Height="75" Width="158" Style="{DynamicResource ButtonTheme2}"/>
        <DataGrid Margin="155,66,132,181">
            <DataGrid.Columns>
                <DataGridTextColumn Width="176" Header="Filmtitel"/>
                <DataGridTextColumn Width="176" Header="Filmgenre"/>
                <DataGridTextColumn Width="176" Header="Filmvarighed"/>
                <DataGridTextColumn Width="176" Header="Filminstruktør"/>
                <DataGridTextColumn Width="176" Header="Premieredato"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
